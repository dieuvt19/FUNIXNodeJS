<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/staff.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container">
            <div class="row">
                <h4 class="text-center">THÔNG TIN CÁ NHÂN</h4>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6 col-xs-12">
                    <img src="<%= user.image %>" alt="image of staff" width="300px">
                </div>
                <div class="col-lg-8 col-md-6 col-xs-12">
                    <p>Id: <%= user._id %></p>
                    <p>Name: <%= user.name %></p>
                    <p>DoB: <%= moment(user.doB).format('DD/MM/YYYY') %></p>
                    <p>SalaryScale: <%= user.salaryScale %></p>
                    <p>StartDate: <%= moment(user.startDate).format('DD/MM/YYYY') %></p>
                    <p>Department: <%= user.department %></p>
                    <p>AnnualLeave: <%= user.annualLeave %></p>
                    <a href="/edit-infoStaff/<%= user._id %>" class="btn btn-primary">Chỉnh sửa thông tin</a>
                </div>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>