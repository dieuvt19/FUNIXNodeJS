<%- include('../includes/head.ejs') %>
 <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/staff.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container">
            <h4 class="row justify-content-center">THÔNG TIN TIÊM VACCINE</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Lần tiêm</th>
                        <th>Tên vaccine</th>
                        <th>Ngày tiêm</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (vacs.length > 0) { %>
                        <% for (let vac of vacs) { %>
                            <tr>
                                <td><%= vac.type %></td>
                                <td><%= vac.name %></td>
                                <td><%= moment(vac.date).format('DD/MM/YYYY') %></td>
                            </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="3">Chưa đăng ký thông tin tiêm vaccine</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>

<%- include('../includes/end.ejs') %>